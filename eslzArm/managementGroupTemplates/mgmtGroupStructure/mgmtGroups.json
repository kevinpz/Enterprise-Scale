{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/tenantDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "mgmtGroups": {
            "type": "object",
            "metadata": {
                "description": "List of MGs."
            }
        }
    },
    "variables": {
    },
    "resources": [
        {
            // Create top level management group under tenant root
            "type": "Microsoft.Management/managementGroups",
            "scope": "/",
            "apiVersion": "2020-05-01",
            "name": "[parameters('mgmtGroups').eslzRootManagementGroup]",
            "properties": {}
        },
        {
            // Create management group for platform
            "type": "Microsoft.Management/managementGroups",
            "apiVersion": "2020-05-01",
            "scope": "/",
            "name": "[parameters('mgmtGroups').platformManagementGroup]",
            "dependsOn": [
                "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('mgmtGroups').eslzRootManagementGroup)]"
            ],
            "properties": {
                "displayName": "[parameters('mgmtGroups').platformManagementGroup]",
                "details": {
                    "parent": {
                    "id": "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('mgmtGroups').eslzRootManagementGroup)]"
                    }
                }
            }
        },
        {
            // Create management group for connectivity
            "type": "Microsoft.Management/managementGroups",
            "apiVersion": "2020-05-01",
            "scope": "/",
            "name": "[parameters('mgmtGroups').connectivityManagementGroup]",
            "dependsOn": [
                "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('mgmtGroups').platformManagementGroup)]"
            ],
            "properties": {
                "displayName": "[parameters('mgmtGroups').connectivityManagementGroup]",
                "details": {
                    "parent": {
                    "id": "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('mgmtGroups').platformManagementGroup)]"
                    }
                }
            }
        },
        {
            // Create management group for management
            "type": "Microsoft.Management/managementGroups",
            "apiVersion": "2020-05-01",
            "scope": "/",
            "name": "[parameters('mgmtGroups').managementManagementGroup]",
            "dependsOn": [
                "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('mgmtGroups').platformManagementGroup)]"
            ],
            "properties": {
                "displayName": "[parameters('mgmtGroups').managementManagementGroup]",
                "details": {
                    "parent": {
                    "id": "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('mgmtGroups').platformManagementGroup)]"
                    }
                }
            }
        },
        {
            // Create management group for identity
            "type": "Microsoft.Management/managementGroups",
            "apiVersion": "2020-05-01",
            "scope": "/",
            "name": "[parameters('mgmtGroups').identityManagementGroup]",
            "dependsOn": [
                "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('mgmtGroups').platformManagementGroup)]"
            ],
            "properties": {
                "displayName": "[parameters('mgmtGroups').identityManagementGroup]",
                "details": {
                    "parent": {
                    "id": "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('mgmtGroups').platformManagementGroup)]"
                    }
                }
            }
        },
        {
            // Create management group for landing zones
            "type": "Microsoft.Management/managementGroups",
            "apiVersion": "2020-05-01",
            "scope": "/",
            "name": "[parameters('mgmtGroups').lzsManagementGroup]",
            "dependsOn": [
                "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('mgmtGroups').eslzRootManagementGroup)]"
            ],
            "properties": {
                "displayName": "[parameters('mgmtGroups').lzsManagementGroup]",
                "details": {
                    "parent": {
                    "id": "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('mgmtGroups').eslzRootManagementGroup)]"
                    }
                }
            }
        },
        {
            // Create management group for online
            "type": "Microsoft.Management/managementGroups",
            "apiVersion": "2020-05-01",
            "scope": "/",
            "name": "[parameters('mgmtGroups').onlineManagementGroup]",
            "dependsOn": [
                "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('mgmtGroups').lzsManagementGroup)]"
            ],
            "properties": {
                "displayName": "[parameters('mgmtGroups').onlineManagementGroup]",
                "details": {
                    "parent": {
                    "id": "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('mgmtGroups').lzsManagementGroup)]"
                    }
                }
            }
        },
        {
            // Create management group for corp
            "type": "Microsoft.Management/managementGroups",
            "apiVersion": "2020-05-01",
            "scope": "/",
            "name": "[parameters('mgmtGroups').corpManagementGroup]",
            "dependsOn": [
                "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('mgmtGroups').lzsManagementGroup)]"
            ],
            "properties": {
                "displayName": "[parameters('mgmtGroups').corpManagementGroup]",
                "details": {
                    "parent": {
                    "id": "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('mgmtGroups').lzsManagementGroup)]"
                    }
                }
            }
        },
        {
            // Create management group for sandbox subscriptions
            "type": "Microsoft.Management/managementGroups",
            "apiVersion": "2020-05-01",
            "scope": "/",
            "name": "[parameters('mgmtGroups').sandboxManagementGroup]",
            "dependsOn": [
                "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('mgmtGroups').eslzRootManagementGroup)]"
            ],
            "properties": {
                "displayName": "[parameters('mgmtGroups').sandboxManagementGroup]",
                "details": {
                    "parent": {
                    "id": "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('mgmtGroups').eslzRootManagementGroup)]"
                    }
                }
            }
        },         
        {
            // Create management group for decommissioned subscriptions
            "type": "Microsoft.Management/managementGroups",
            "apiVersion": "2020-05-01",
            "scope": "/",
           "name": "[parameters('mgmtGroups').decommissionedManagementGroup]",
            "dependsOn": [
                "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('mgmtGroups').eslzRootManagementGroup)]"
            ],
            "properties": {
                "displayName": "[parameters('mgmtGroups').decommissionedManagementGroup]",
                "details": {
                    "parent": {
                    "id": "[tenantResourceId('Microsoft.Management/managementGroups/', parameters('mgmtGroups').eslzRootManagementGroup)]"
                    }
                }
            }
        }
    ],
    "outputs": {}
}
